<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="br.com.tg.entidades.StatusPedido" table="STATUS_PEDIDO" lazy="false">
		<id name="id" column="ID" type="java.lang.Integer" unsaved-value="0">
			<generator class="increment">
				<param name="sequence">GEN_STATUS_PEDIDO_ID</param>
			</generator>
		</id>
		<property name="descricao" column="DESCRICAO" not-null="true"/>
	</class>
	
</hibernate-mapping>  
